<h1 class="text-center mt-4">{{title}}</h1>
<form class="mb-4" action="/api/members" method="POST">
<div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control">
</div>
<div class="form-group">
    <label for="email">Name</label>
    <input type="email" name="email" class="form-control">
</div>
<input type="submit" value="Add Member" class="btn btn-primary btn-block"> 
</form>
<h4 class="text mb-4">Members</h4>
{{#each members}}
<ul class="list-group">
    <li class="list-group-item">{{this.name}}:  {{this.email}}</li>
</ul>
{{/each}}

<a href="/api/members" class="btn btn-light mt-4">Vist API</a>